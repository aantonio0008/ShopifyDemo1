<div class="min-h-full flex items-center justify-center py-12 px-4 sm:px-6 lg:px-6">
  <div class="max-w-medium w-full space-y-8">
    <div>
      <h1 class="mt-6 text-center text-3xl font-bold text-gray-700">Activate Account</h1>
      <p class="mt-4 text-center">Create your password to activate our account</p>
    </div>
    <div>
      {% form 'activate_customer_password', class: "space-y-4" %}
        {% if form.errors %}
          <div class="relative border border-red-400 bg-red-100 text-red-700 px-4 py-3" role="alert">
            <strong class="font-bold">Error!</strong>
            <p class="block sm:inline">{{ form.errors | default_errors }}</p>
          </div>
        {% endif %}
        <div class="my-2">
          <label for="password" class="font-bold">Password</label>
          <input
            type="password"
            name="customer[password]"
            id="password"
            class="relative block w-full px-3 py-2 border"
            autocomplete="new-password"
            placeholder="New Password">
        </div>
        <div class="my-2">
          <label for="confirm_password" class="font-bold">Confirm Password</label>
          <input
            type="password"
            name="customer[password_confirmation]"
            id="confirm_password"
            class="relative block w-full px-3 py-2 border"
            placeholder="Confirm Password">
        </div>
        <div class="block md:flex">
          <button type="submit" class="w-full py-2 px-4 text-sm font-medium text-white bg-gray-900 hover:bg-gray-600">Activate Account</button>
          <button
            type="submit"
            name="decline"
            class="w-full py-2 px-4 text-sm font-medium text-gray-700 bg-white hover:bg-gray-700 hover:text-white">Decline Invitation</button>
        </div>
      {% endform %}
    </div>
  </div>
</div>